<div id="id">
    <%= notice %>
</div>

<h1>My Dogs</h1>

<%= link_to "Add a new dog", new_dog_path, class: 'btn btn-info' %>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @dogs.each do |puppy|%>
            <tr>
                <td><%= puppy.id %></td>
                <td><%= puppy.name %></td>
                <td><%= puppy.breed %></td>
                <td><%= puppy.age %></td>
                <td><%= link_to "Show", dog_path(puppy), class: 'btn btn-info' %></td>
                <td><%= link_to "Edit", edit_dog_path(puppy), class: 'btn btn-success' %></td>
                <td><%= link_to "Delete", puppy, method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
    </tbody>
</table>

